<?xml version="1.0" encoding="UTF-8"?>

<!-- metasfresh-webui default logback configuration -->

<included>
	<!-- Spring boot defaults -->
	<include resource="org/springframework/boot/logging/logback/defaults.xml" />

	<!-- Override defaults -->
	<property name="USER_SESSION_INFO" value="[%16.16X{RemoteAddr:-}][%10.-10X{LoggedUser:-}]" />
	<property name="CONSOLE_LOG_PATTERN"
		value="%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} ${USER_SESSION_INFO} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}" />
	<property name="FILE_LOG_PATTERN"
		value="%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${PID:- } ${USER_SESSION_INFO} --- [%t] %-40.40logger{39} : %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}" />


	<!-- Console logging configuration -->
	<include resource="org/springframework/boot/logging/logback/console-appender.xml" />


	<!-- File logging configuration -->
	<property name="LOG_PATH" value="${LOG_PATH:-./log/}" />

	<!-- Log to separate files by RemoteAddr, LoggedUser -->
	<include resource="de/metas/admin/logging/FILE-byLoggedUserAndRemoteAddr.xml" />

	<!-- Allow to disable logstash logging from outside; see https://github.com/metasfresh/metasfresh/issues/1504 -->
	<!-- Logging to logstash is enabled by default. If you are a dev in need of a local ELK stack, you can take a look at
		 https://github.com/metasfresh/metasfresh-dev/tree/master/vagrant 
	-->
	<springProperty scope="context" name="LOGSTASH_DISABLED" source="logstash.disabled" defaultValue="false" />

	<!-- Include the config for a logstash appender; see https://github.com/metasfresh/metasfresh/issues/1504 -->
	<include resource="de/metas/admin/logging/STASH.xml" />


	<!-- Configure root logger -->
	<root level="INFO">
		<appender-ref ref="CONSOLE" />

		<!-- Log to separate files by RemoteAddr, LoggedUser -->
		<appender-ref ref="FILE-byLoggedUserAndRemoteAddr" />

		<if condition='!Boolean.parseBoolean(property("LOGSTASH_DISABLED"))'>
			<then>
				<appender-ref ref="STASH" />
			</then>
		</if>
	</root>

	<!-- see http://codecentric.github.io/spring-boot-admin/1.3.0/#loglevel-management -->
	<!-- include resource="org/springframework/boot/logging/logback/base.xml"/ -->
	<jmxConfigurator />

</included>
